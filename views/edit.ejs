<!DOCTYPE html>
<html>
<%- include('./partials/head.ejs') %>
<body class="editPage">
    <div class="container mt-5">
        <div class="text-center">
            <h1 class="display-5 mb-5" id="editTitle">Students Edit Page</h1>
        </div>
        <div class="mainRow">
            <form action="/class_tracker/tracker/<%=tracker._id%>?_method=PUT" method="POST" class="boxes">
                <div class="col-8 mb-4">
                    <label for="Name">Name</label>
                    <input name="Name" class="form-control"type="text" value="<%=tracker.Name%>" placeholder="Enter Name">
                </div>
                <div class="col-8 mb-3" id="iFact">
                    <label for="Fact">Interesting Fact</label>
                    <input name="Fact" class="form-control" type="text" value="<%=tracker.Fact%>"placeholder="Enter Interesting Fact ">
                </div>
                <div class="col-8">
                    <input class="btn btn-success add-btn" type="submit" value="Submit"></input>
                </div>
            </form>
        </div>
    </div>
    <div class="link-edit">
        <button class="backButton"><a href="/class_tracker/index">Go Back to Index</a></button>
    </div>
</body>
</html>